<div class="card shadow-lg text-left h-100">
    <h5 class="card-header text-white bg-danger">Upcoming Conference / Training</h5>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <% @events.each_with_index do |event, index| %>
            <li class="list-group-item">

                <div class="row align-items-center">

                    <div class="col-12 col-lg-8">
                        <div class="text-center text-md-start mb-3 mb-lg-0">
                            <h6 class="fw-bold mb-3"><%= event.title%></h6>
                            <p>Date: <%= event.date.strftime('%d-%m-%Y') %> <%=event.start_time.strftime("%I:%M %p") %> - <%=event.end_time.strftime("%I:%M %p") %>  </p>

                            <% if not event.attachment_url1.blank? %>
                                <a href="<%= event.attachment_url1%>" target="_blank" ><%= File.basename(URI.parse(event.attachment_url1).path) %></a>
                            <%end%>  
                            <% if not event.attachment_url2.blank? %>
                                <a href="<%= event.attachment_url2%>" target="_blank" ><%= File.basename(URI.parse(event.attachment_url2).path) %></a>
                            <%end%>
                            <% if not event.attachment_url3.blank? %>
                                <a href="<%= event.attachment_url3%>" target="_blank" ><%= File.basename(URI.parse(event.attachment_url3).path) %></a>
                            <%end%>
                        </div>
                    </div>                    

                    <%if current_user && (@registered_events&.include? event.id)%>
                    <div class="col-12 col-lg-4">
                        <div class="text-center text-lg-right">
                            <a class="btn btn-primary px-4 py-2" href=<%= @join_urls[@registered_events.index(event.id)] %>  >Join</a>
                        </div>
                    </div>
                    <%end%>
                </div>

            </li>
            <% end %>
        </ul>
        
    </div>
</div>    




