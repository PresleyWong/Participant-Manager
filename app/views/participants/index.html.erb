<p id="notice"><%= notice %></p>

<h1>Participants</h1>

<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>English name</th>
      <th>Chinese name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>College</th>
      <th>Academic year</th>
      <th>Language</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.gender %></td>
        <td><%= participant.english_name %></td>
        <td><%= participant.chinese_name %></td>
        <td><%= participant.email %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.college %></td>
        <td><%= participant.academic_year %></td>
        <td><%= participant.language %></td>
        <td><%= participant.remarks %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

