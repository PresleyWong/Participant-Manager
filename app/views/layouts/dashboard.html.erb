<!DOCTYPE html>
<html>
  <head>
    <title>Participant Manager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href=<%=root_path%>>Petaling Jaya Event Registration System (PJERS)</a> 
    </header>
    <div>
      <div class="row">
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" id="sidebarMenu">
          <div class="position-sticky pt-3">
            <ul class="nav flex-column">   
              
              <% if current_admin %>

              <li class="nav-item">
                <%= link_to events_path, class: "nav-link" do %>
                <i class="fas fa-calendar-alt"></i> Events
                <% end %> 
              </li>

              <li class="nav-item">
                  <%= link_to participants_path, class: "nav-link" do %>
                  <i class="fas fa-users"></i> Participants
                  <% end %> 
              </li>

              <li class="nav-item">
                <%= link_to admins_servers_path, class: "nav-link" do %>
                <i class="fas fa-users"></i> Serving Ones
                <% end %> 
            </li>

              <% else %>

              <li class="nav-item">
                <%= link_to events_path, class: "nav-link" do %>
                <i class="fas fa-calendar-alt"></i> Events
                <% end %> 
              </li>
              <li class="nav-item">
                  <%= link_to participants_path, class: "nav-link" do %>
                  <i class="fas fa-users"></i> Participants
                  <% end %> 
              </li>
              <% end %>

            </ul>

            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted"><span>Settings</span></h6>
              <ul class="nav flex-column mb-2">
                
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link" do %>
                  <i class="fas fa-key"></i> Credentials
                  <% end %> 
                </li>

                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link" do %>
                  <i class="fas fa-user-circle"></i> Account
                  <% end %> 
                </li>

                <li class="nav-item">
                  <% if server_signed_in? %>
                    <%= link_to destroy_server_session_path,  class: "nav-link", method: :delete do %>
                    <i class="fas fa-power-off"></i> Logout
                    <% end %> 
                  <% elsif admin_signed_in? %>
                    <%= link_to destroy_admin_session_path,  class: "nav-link", method: :delete do %>
                    <i class="fas fa-power-off"></i> Logout
                    <% end %> 
                  <% end %>
                </li>

              </ul>
          </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="chartjs-size-monitor">
            <div class="chartjs-size-monitor-expand">
              <div class=""></div>
            </div>
            <div class="chartjs-size-monitor-shrink">
              <div class=""></div>
            </div>
          </div>


          <%= yield %>
        </main>
      </div>
    </div>
    



  </body>
</html>


